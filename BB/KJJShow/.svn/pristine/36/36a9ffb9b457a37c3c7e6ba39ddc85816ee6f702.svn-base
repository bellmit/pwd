            	-moz-border-radius: 0.1rem;
            	position: relative;
            	width: 2.6rem;
            	height: 1.53rem;
            }
            .detail video{
            	display: block;
            	width: 100%;
            	height: 100%;
            	border-radius: 0.1rem;
            	-webkit-border-radius: 0.1rem;
            	-moz-border-radius: 0.1rem;
            	
            }
            .detail .bofang{
            	font-size: 0.9rem;
            	position: absolute;
            	left: 50%;
            	margin-left:-0.45rem ;
            	top: 50%;
            	margin-top:-0.5rem ;
            	 -webkit-tap-highlight-color: rgba(0,0,0,0);
            	
            }
             .turnBtn:link {color: white}     /* 未访问的链接 */
			.turnBtn:visited {color: white}  /* 已访问的链接 */
