		    	<div class="videoBox" >
		    	<video id="video1">
				    <source src="/example/html5/mov_bbb.mp4" type="video/mp4" />
				    <source src="/example/html5/mov_bbb.ogg" type="video/ogg" />
		    	</video>
		    	<i  class="iconfont icon-bofang bofang"></i>
		    	</div>
		    </div>
		</div>
	  
		<script>

			$(".bofang").click(function(e){
				e.stopPropagation(); 
				$(".bofang").css("display","none")
			    $("video1").play() 
			    
			})
			$(".videoBox").click(function(){
				$(".bofang").css("display","block")
			    $("video1").pause()
			    
			})
			
			var pathName = document.location.pathname; 
			function GetQueryString(name)
			{
			     var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
			     var r = window.location.search.substr(1).match(reg);
			     if(r!=null)return  unescape(r[2]); return null;
			}
			var parameter1=GetQueryString("parameter1");
			var parameter2=GetQueryString("parameter2");
			$(".turnBtn").click(function(){
				
				window.location.href="info.html?parameter1="+parameter1+"&parameter2="+parameter2;
			})
			$(".searchBtn").click(function(){
				window.location.href="info.html?parameter1="+parameter1+"&parameter2="+parameter2;
			})

		</script>
	</body>
</html>
