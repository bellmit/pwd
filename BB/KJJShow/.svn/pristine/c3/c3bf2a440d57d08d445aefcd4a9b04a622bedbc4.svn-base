		<script>
			var pathName = document.location.pathname; 
			function GetQueryString(name)
			{
			     var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
			     var r = window.location.search.substr(1).match(reg);
			     if(r!=null)return  unescape(r[2]); return null;
			}
			var parameter1=GetQueryString("parameter1");
			if(parameter1==null){
				$(".listBox").eq(0).show();
				$(".tabBox3 li a").eq(0).css({
					background:"white",
					color:"black",
					border:"0.01rem solid #A3A3A3",
				    boxShadow:"-0.02rem -0.02rem 0.02rem #CFCFCF inset",
				    borderRadius:"0.03rem"
				})
			}else{
				$(".listBox").eq(parameter1).show();
				$(".tabBox3 li a").eq(parameter1).css({
					background:"white",
					color:"black",
					border:"0.01rem solid #A3A3A3",
				    boxShadow:"-0.02rem -0.02rem 0.02rem #CFCFCF inset",
				    borderRadius:"0.03rem"
				})
			}
			
			$(".tabBox3 li a").click(function(){
				var a=$('.tabBox3 li a').index(this);
				$(".tabBox3 li a").css({
					background:"",
					color:"",
					border:"",
				    boxShadow:"",
				    borderRadius:""
				})
				$(".listBox").hide();
				$(this).css({
					background:"white",
					color:"black",
					border:"0.01rem solid #A3A3A3",
				    boxShadow:"-0.02rem -0.02rem 0.02rem #CFCFCF inset",
				    borderRadius:"0.03rem"
			    })
				$(".listBox").eq(a).show();
			})
			
			
				    
		    $(".guanzhuBtn").attr("a","0")
			$(".guanzhuBtn").click(function(){
				 if($(this).attr("a")==0){
				 	$(".guanzhuBtn").attr("a","1")
				 	$(this).val("已关注")
				 	$(this).css("background","gainsboro")
				 	layerTip("已关注");
				 }else{
				 	$(".guanzhuBtn").attr("a","0")
				 	$(this).val("关注")
				 	$(this).css("background","")
				 	layerTip("已取消关注");
				 }
			})
			
			
			$(".rongshangNews-list").click(function(){
				window.location.href="detail.html";
			})
			
			$(".communicate").click(function(){
				var parameter1=1;
				var parameter2="search"
				window.location.href="chat.html?parameter1="+parameter1+"&parameter2="+parameter2;
			})
