<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_bmzj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="rongshanghui.tastebychance.com.rongshanghui.register.RegisterBMZJEntranceActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/head_includestatusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/register_bmzj_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_20"
        android:text="当前激活账户：三一镇" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_12">

        <TextView
            android:id="@+id/register_bmzj_selectareacode_value_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/circle5_grayedge_lightgraybg_style"
            android:hint="中国(+86)"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:textColorHint="@color/lightgray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/register_bmzj_selectareacode_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:text="其他" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_12">


        <EditText
            android:id="@+id/register_bmzj_inputphonno_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle5_grayedge_lightgraybg_style"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:paddingStart="@dimen/dp_10"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/register_bmzj_getverifycode_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="获取"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textColorHint="@color/gray" />
    </RelativeLayout>


    <EditText
        android:id="@+id/register_bmzj_inputverficode_edt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/circle5_grayedge_lightgraybg_style"
        android:ems="10"
        android:hint="请输入验证码"
        android:inputType="number"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/sp_12" />
</LinearLayout>
