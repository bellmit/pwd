<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_member_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rongshanghui.tastebychance.com.rongshanghui.mime.shmanager.membermanager.MemberInfoActivity"
    tools:showIn="@layout/activity_member_info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/shmanager_memberinfo_name_tv"
                    style="@style/home_sht_memberinfo_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="性别" />

                <TextView
                    android:id="@+id/shmanager_memberinfo_sex_tv"
                    style="@style/home_sht_memberinfo_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="出生日期" />

                <TextView
                    android:id="@+id/shmanager_memberinfo_birth_tv"
                    style="@style/home_sht_memberinfo_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="籍贯" />

                <TextView
                    android:id="@+id/shmanager_memberinfo_jiguan_tv"
                    style="@style/home_sht_memberinfo_input_style" />
            </LinearLayout>

            <RelativeLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="民族" />


                <TextView
                    android:id="@+id/shmanager_memberinfo_minzu_tv"
                    style="@style/home_sht_memberinfo_input_style"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView1" />
            </RelativeLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="毕业院校及专业" />

                <TextView
                    android:id="@+id/shmanager_memberinfo_zhuanye_tv"
                    style="@style/home_sht_memberinfo_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/home_sht_rhsq_title_style"
                    android:text="通讯地址" />

                <TextView
                    android:id="@+id/shmanager_memberinfo_address_tv"
                    style="@style/home_sht_memberinfo_input_style"
                    android:layout_height="77dp"
                    android:gravity="left"
                    android:textColorHint="@color/lightgray" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="联系电话" />

                <TextView
                    android:id="@+id/shmanager_memberinfo_phone_tv"
                    style="@style/home_sht_memberinfo_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="现任社会职务" />

                <TextView
                    android:id="@+id/shmanager_memberinfo_zhiwu_tv"
                    style="@style/home_sht_memberinfo_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="一寸照片" />

                <ImageView
                    android:id="@+id/shmanager_memberinfo_photo_iv"
                    style="@style/home_sht_memberinfo_input_style"
                    android:layout_width="79dp"
                    android:layout_height="97dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/sht_rhsq_photo" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
