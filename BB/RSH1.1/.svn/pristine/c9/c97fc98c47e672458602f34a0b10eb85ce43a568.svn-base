<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:peng="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homelistitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/dp_4"
    android:paddingLeft="17dp">


    <View
        android:id="@+id/item_yjzq_hf_underline"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="13dp"
        android:background="@color/line_gray" />

    <ImageView
        android:id="@+id/item_yjzq_hf_img_iv"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:scaleType="fitXY"
        android:src="@drawable/pic1" />


    <RelativeLayout
        android:id="@+id/item_yjzq_hf_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_alignTop="@+id/item_yjzq_hf_img_iv"
        android:layout_toRightOf="@+id/item_yjzq_hf_img_iv">

        <TextView
            android:id="@+id/item_yjzq_hf_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_toStartOf="@+id/item_yjzq_hf_date_tv"
            android:maxLines="1"
            android:textColor="#2a2a2a"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/item_yjzq_hf_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_yjzq_hf_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_yjzq_hf_title_rl"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toEndOf="@+id/item_yjzq_hf_img_iv" />

</RelativeLayout>