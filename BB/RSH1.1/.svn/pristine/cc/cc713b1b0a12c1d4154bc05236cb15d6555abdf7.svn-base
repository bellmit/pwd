<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:peng="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homelistitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="17dp">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_below="@+id/item_yjzq_hf_img_iv"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:background="@color/line_gray" />

    <rongshanghui.tastebychance.com.rongshanghui.view.RoundImageView
        android:id="@+id/item_yjzq_hf_img_iv"
        android:layout_width="62dp"
        android:layout_marginTop="20dp"
        android:layout_height="62dp"
        android:layout_centerVertical="true"
        android:src="@drawable/person_defaultheadportrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/twolevellist_child_source_tv"
        android:layout_toRightOf="@+id/item_yjzq_hf_img_iv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twolevellist_child_isfriend_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[好友]"
            android:visibility="gone"
            android:textColor="@color/font_blue" />

        <TextView
            android:id="@+id/twolevellist_child_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="刘商"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <TextView
        android:id="@+id/twolevellist_child_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/circle5_blueedge_style"
        android:paddingBottom="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_3"
        android:text="头条"
        android:maxLength="6"
        android:textColor="@color/font_blue"
        android:textSize="@dimen/sp_15" />
</RelativeLayout>