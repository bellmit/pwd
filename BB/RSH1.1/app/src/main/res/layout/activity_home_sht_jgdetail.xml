<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shtjgdetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rongshanghui.tastebychance.com.rongshanghui.home.sht.detail.SHTJGDetailActivity">

    <include
        android:id="@+id/includestatusbar_rl"
        layout="@layout/head_includestatusbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/includestatusbar_rl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_shtdetail_head_iv"
                style="@style/detail_count_layout_headiv_style" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_shtdetail_head_iv"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_18"
                android:paddingTop="@dimen/dp_18">

                <LinearLayout
                    android:id="@+id/activity_shtdetail_fsnum_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_shtdetail_fsnumshow_tv"
                        style="@style/detail_count_layout_num_style"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_shtdetail_fsnum_tv"
                        style="@style/detail_count_layout_numshow_style"
                        android:text="粉丝数" />
                </LinearLayout>

                <include layout="@layout/line_vertical" />

                <LinearLayout
                    android:id="@+id/activity_shtdetail_fangdainum_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_shtdetail_fangdainumshow_tv"
                        style="@style/detail_count_layout_num_style"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_shtdetail_fangdainum_tv"
                        style="@style/detail_count_layout_numshow_style"
                        android:text="放贷信息" />
                </LinearLayout>

                <include layout="@layout/line_vertical" />

                <LinearLayout
                    android:id="@+id/activity_shtdetail_llnum_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_shtdetail_llshow_tv"
                        style="@style/detail_count_layout_num_style"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_shtdetail_llnum_tv"
                        style="@style/detail_count_layout_numshow_style"
                        android:text="浏览量" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:paddingBottom="40dp"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">

                <ImageView
                    android:id="@+id/activity_shtdetail_jianjie_iv"
                    android:layout_width="97dp"
                    android:layout_height="102dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/sht_jg_jianjie" />

                <ImageView
                    android:id="@+id/activity_shtdetail_zixun_iv"
                    android:layout_width="90dp"
                    android:layout_height="102dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@+id/activity_shtdetail_jianjie_iv"
                    android:background="@drawable/sht_jg_zixun" />

                <ImageView
                    android:id="@+id/activity_shtdetail_banlixinyongka_iv"
                    android:layout_width="84dp"
                    android:layout_height="168dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/activity_shtdetail_jianjie_iv"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/sht_jg_banlixinyongka" />

                <ImageView
                    android:id="@+id/activity_shtdetail_gerenxinyongdai_iv"
                    android:layout_width="102dp"
                    android:layout_height="94dp"
                    android:layout_alignEnd="@+id/activity_shtdetail_zixun_iv"
                    android:layout_alignTop="@+id/activity_shtdetail_banlixinyongka_iv"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/sht_jg_gerenxinyongdai" />

                <ImageView
                    android:id="@+id/activity_shtdetail_cailiaoxiazai_iv"
                    android:layout_width="121dp"
                    android:layout_height="64dp"
                    android:layout_alignStart="@+id/activity_shtdetail_gerenxinyongdai_iv"
                    android:layout_below="@+id/activity_shtdetail_gerenxinyongdai_iv"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/sht_jg_cailiaoxiazai" />

                <ImageView
                    android:id="@+id/activity_shtdetail_cailiaoshangbao_iv"
                    android:layout_width="130dp"
                    android:layout_height="64dp"
                    android:layout_below="@+id/activity_shtdetail_gerenxinyongdai_iv"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toEndOf="@+id/activity_shtdetail_cailiaoxiazai_iv"
                    android:background="@drawable/sht_jg_cailiaoshangbao" />

                <ImageView
                    android:id="@+id/activity_shtdetail_banshizhinan_iv"
                    android:layout_width="151dp"
                    android:layout_height="132dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/activity_shtdetail_zixun_iv"
                    android:background="@drawable/sht_jg_banshizhinan" />

                <ImageView
                    android:id="@+id/activity_shtdetail_fangdaixinxi_iv"
                    android:layout_width="151dp"
                    android:layout_height="64dp"
                    android:layout_above="@+id/activity_shtdetail_cailiaoshangbao_iv"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toEndOf="@+id/activity_shtdetail_gerenxinyongdai_iv"
                    android:background="@drawable/sht_jg_fangdaixinxi" />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
