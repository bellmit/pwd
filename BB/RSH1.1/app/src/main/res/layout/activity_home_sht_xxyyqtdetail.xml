<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shtxx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rongshanghui.tastebychance.com.rongshanghui.home.sht.detail.SHTXXDetailActivity">

    <include
        android:id="@+id/includestatusbar_rl"
        layout="@layout/head_includestatusbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/includestatusbar_rl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_shtdetail_head_iv"
                style="@style/detail_count_layout_headiv_style" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_shtdetail_head_iv"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_18"
                android:paddingTop="@dimen/dp_18">

                <LinearLayout
                    android:id="@+id/activity_shtdetail_fsnum_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_shtdetail_fsnumshow_tv"
                        style="@style/detail_count_layout_num_style"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_shtdetail_fsnum_tv"
                        style="@style/detail_count_layout_numshow_style"
                        android:text="粉丝数" />
                </LinearLayout>

                <include layout="@layout/line_vertical" />

                <LinearLayout
                    android:id="@+id/activity_shtdetail_llnum_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_shtdetail_llshow_tv"
                        style="@style/detail_count_layout_num_style"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_shtdetail_llnum_tv"
                        style="@style/detail_count_layout_numshow_style"
                        android:text="浏览量" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:paddingBottom="40dp"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">

                <ImageView
                    android:id="@+id/activity_shtdetail_jianjie_iv"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/sht_xx_jianjie" />

                <ImageView
                    android:id="@+id/activity_shtdetail_lianxiwomen_iv"
                    android:layout_width="175dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@+id/activity_shtdetail_jianjie_iv"
                    android:background="@drawable/sht_xx_lianxiwomen" />


            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
