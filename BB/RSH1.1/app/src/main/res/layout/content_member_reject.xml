<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_member_reject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dp_18"
    android:paddingEnd="@dimen/dp_18"
    android:paddingTop="@dimen/dp_15"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rongshanghui.tastebychance.com.rongshanghui.mime.shmanager.membermanager.MemberRejectActivity"
    tools:showIn="@layout/activity_member_reject">

    <EditText
        android:id="@+id/feedback_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/includestatusbar_rl"
        android:background="@color/bg_gray"
        android:gravity="top"
        android:hint="请说明拒绝添加该用户为成员的原因...（50字以内）"
        android:imeOptions="actionDone"
        android:lineSpacingExtra="6.0dp"
        android:minHeight="200dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:textColor="@color/text_black"
        android:textColorHint="@color/lightgray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/feedback_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/feedback_content"
        android:layout_alignRight="@+id/feedback_content"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:text="（0/50）"
        android:textColor="@color/text_red"
        android:textSize="10sp" />


</RelativeLayout>
