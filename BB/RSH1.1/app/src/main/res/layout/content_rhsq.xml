<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_rhsq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rongshanghui.tastebychance.com.rongshanghui.home.sht.detail.RHSQActivity"
    tools:showIn="@layout/activity_home_sht_rhsq">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="（注意：以下均是必填项，若无则填无）"
                android:textSize="@dimen/sp_12" />

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/sht_rhsq_name_edt"
                    style="@style/home_sht_rhsq_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="性别" />

                <!--<RadioGroup
                    android:id="@+id/sht_rhsq_sex_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/bg_gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/sht_rhsq_sex_man_rbt"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:checked="true"
                        android:text="男"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/sht_rhsq_sex_lady_rbt"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginStart="@dimen/dp_1"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="女"
                        android:textSize="15sp" />
                </RadioGroup>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sht_rhsq_sex_man_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/rectangle_gray2edge_style"
                        android:text="男" />

                    <TextView
                        android:id="@+id/sht_rhsq_sex_lady_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/rectangle_graybg_style"
                        android:text="女" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="出生日期" />

                <TextView
                    android:id="@+id/sht_rhsq_birth_tv"
                    style="@style/home_sht_rhsq_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="籍贯" />

                <TextView
                    android:id="@+id/sht_rhsq_jiguan_tv"
                    style="@style/home_sht_rhsq_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    android:id="@+id/textView1"
                    style="@style/home_sht_rhsq_title_style"
                    android:text="民族" />

                <LinearLayout style="@style/home_sht_rhsq_input_style">

                    <TextView
                        android:id="@+id/sht_rhsq_minzu_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_1"
                        android:gravity="center"
                        android:background="@drawable/whitebg_turndownicon" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="毕业院校及专业" />

                <EditText
                    android:id="@+id/sht_rhsq_zhuanye_edt"
                    style="@style/home_sht_rhsq_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/home_sht_rhsq_title_style"
                    android:layout_gravity="top"
                    android:text="通讯地址" />

                <EditText
                    android:id="@+id/sht_rhsq_address_edt"
                    style="@style/home_sht_rhsq_input_style"
                    android:layout_height="77dp"
                    android:gravity="left"
                    android:hint="（国家+省+市+街道+详细地址）"
                    android:textColorHint="@color/lightgray" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="联系电话" />

                <TextView
                    android:id="@+id/sht_rhsq_phone_tv"
                    style="@style/home_sht_rhsq_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:text="现任社会职务" />

                <EditText
                    android:id="@+id/sht_rhsq_zhiwu_edt"
                    style="@style/home_sht_rhsq_input_style" />
            </LinearLayout>

            <LinearLayout style="@style/home_sht_rhsq_ll_style">

                <TextView
                    style="@style/home_sht_rhsq_title_style"
                    android:layout_gravity="top"
                    android:visibility="visible"
                    android:text="一寸照片" />

                <LinearLayout
                    style="@style/home_sht_rhsq_input_style"
                    android:layout_width="79dp"
                    android:layout_height="97dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/sht_rhsq_photo_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sht_rhsq_photo"
                        android:layout_margin="@dimen/dp_1"
                        android:scaleType="fitXY" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                style="@style/home_sht_rhsq_ll_style"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/sht_rhsq_rhxz_cb"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <TextView
                    android:id="@+id/sht_rhsq_rhxz_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_3"
                    android:text="我已阅读并同意《入会须知》"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
