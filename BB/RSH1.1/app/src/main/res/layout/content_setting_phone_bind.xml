<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_setting_phone_bind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_phonebind_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rongshanghui.tastebychance.com.rongshanghui.mime.setting.SettingPhoneBindActivity"
    tools:showIn="@layout/activity_setting_phone_bind">


    <TextView
        android:id="@+id/selectareacode_tv"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_grayedge_style"
        android:ems="10"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:textColor="@color/font_blue"
        android:text="选择区号"
        android:textColorHint="@color/gray" />

    <TextView
        android:id="@+id/getverifycode_tv"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_below="@+id/selectareacode_tv"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_grayedge_style"
        android:ems="10"
        android:gravity="center"
        android:textColor="@color/font_blue"
        android:padding="@dimen/dp_8"
        android:text="获取验证"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/inputphonno_edt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/selectareacode_tv"
        android:layout_alignTop="@+id/selectareacode_tv"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/getverifycode_tv"
        android:background="@drawable/rectangle_grayedge_style"
        android:ems="10"
        android:hint="请输入手机号码"
        android:gravity="center"
        android:inputType="phone"
        android:padding="@dimen/dp_8" />

    <EditText
        android:id="@+id/inputverficode_edt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/getverifycode_tv"
        android:layout_alignTop="@+id/getverifycode_tv"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/selectareacode_tv"
        android:background="@drawable/rectangle_grayedge_style"
        android:ems="10"
        android:hint="请输入验证码"
        android:inputType="number"
        android:padding="@dimen/dp_8" />

</RelativeLayout>
