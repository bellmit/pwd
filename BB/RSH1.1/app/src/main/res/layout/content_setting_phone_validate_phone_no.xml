<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_setting_phone_validate_phone_no"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/setting_phonebind_bg"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rongshanghui.tastebychance.com.rongshanghui.mime.setting.SettingPhoneValidatePhoneNoActivity"
    tools:showIn="@layout/activity_setting_phone_validate_phone_no">

    <TextView
        android:id="@+id/setting_phonebind_currentphone_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前绑定：135****0591" />

    <EditText
        android:id="@+id/setting_changeaccount_phone_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setting_phonebind_currentphone_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/rectangle_grayedge_style"
        android:ems="10"
        android:hint="请输入当前绑定的完整手机号码"
        android:inputType="phone"
        android:minHeight="40dp"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/sp_12"
        android:textColorHint="@color/lightgray" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/setting_changeaccount_phone_edt"
        android:layout_alignEnd="@+id/setting_changeaccount_phone_edt"
        android:layout_alignTop="@+id/setting_changeaccount_phone_edt"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/grxyd_edt_icon" />

</RelativeLayout>
