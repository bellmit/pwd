<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/includestatusbar_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="20dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:src="@drawable/head_left" />

        <TextView
            android:id="@+id/head_center_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="标题" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mine_myfollow_underline"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/head_right_iv"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:background="@drawable/home_search"
                android:visibility="gone" />

            <TextView
                android:id="@+id/head_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mine_myfollow_underline"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:text="完成"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/head_bottomline"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/line_gray"
        android:layout_below="@+id/includestatusbar_rl" />

</RelativeLayout>