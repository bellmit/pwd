<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:peng="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homelistitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="17dp">


    <View
        android:id="@+id/item_yjzq_hf_underline"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_below="@+id/item_yjzq_hf_img_iv"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="13dp"
        android:background="@color/line_gray" />

    <ImageView
        android:id="@+id/item_yjzq_hf_img_iv"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_yjzq_hf_underline"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/dp_22"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/item_yjzq_hf_img_iv"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_personinfo_iv"
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:background="@drawable/pageview" />

        <TextView
            android:id="@+id/twolevellist_child_pagerview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="1.6万"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>


    <TextView
        android:id="@+id/twolevellist_child_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_yjzq_hf_underline"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="19dp"
        android:text="头条"
        android:maxLength="6"
        android:textColor="@color/font_blue"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/twolevellist_child_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignTop="@+id/item_yjzq_hf_img_iv"
        android:layout_toRightOf="@+id/item_yjzq_hf_img_iv"
        android:maxLines="1"
        android:text="福清新旧城区将迎来大外环时代"
        android:textColor="#2c2c2c"
        android:textSize="@dimen/sp_15" />
</RelativeLayout>