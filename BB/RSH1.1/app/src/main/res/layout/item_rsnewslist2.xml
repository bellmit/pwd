<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:peng="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homelistitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circle5_grayedge_style"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingLeft="17dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_below="@+id/item_yjzq_hf_img_iv"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:background="@color/line_gray" />


    <ImageView
        android:id="@+id/mine_personinfo_iv"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_yjzq_hf_img_iv"
        android:layout_alignBottom="@+id/item_yjzq_hf_img_iv"
        android:background="@drawable/pageview" />

    <TextView
        android:id="@+id/twolevellist_child_pagerview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_alignBottom="@+id/mine_personinfo_iv"
        android:layout_toRightOf="@+id/mine_personinfo_iv"
        android:text="1.6万" />

    <TextView
        android:id="@+id/twolevellist_child_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle5_grayedge_style"
        android:text="头条"
        android:paddingTop="@dimen/dp_3"
        android:maxLength="6"
        android:paddingBottom="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_8"
        android:textColor="@color/gray"
        android:paddingRight="@dimen/dp_8"
        android:textSize="@dimen/sp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/mine_personinfo_iv" />

    <TextView
        android:id="@+id/twolevellist_child_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="福清新旧城区将迎来大外环时代"
        android:maxLines="1"
        android:textSize="@dimen/sp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/item_yjzq_hf_img_iv" />

    <ImageView
        android:id="@+id/item_yjzq_hf_img_iv"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>