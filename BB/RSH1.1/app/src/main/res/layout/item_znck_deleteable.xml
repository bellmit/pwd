<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homelistitem"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingStart="10dp">

    <!--指南查看、下载查看-->


    <ImageView
        android:id="@+id/item_znck_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/item_znck_icon" />


    <ImageView
        android:id="@+id/item_znck_delete_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingEnd="13dp"
        android:src="@drawable/item_znck_del" />

    <TextView
        android:id="@+id/item_znck_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toEndOf="@+id/item_znck_icon_iv"
        android:layout_toStartOf="@+id/item_znck_delete_iv"
        android:maxLines="1"
        android:text="福清新旧城区将迎来大外环时代"
        android:textColor="#2c2c2c"
        android:textSize="@dimen/sp_15" />
</RelativeLayout>