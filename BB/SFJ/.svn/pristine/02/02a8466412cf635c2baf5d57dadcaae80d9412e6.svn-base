<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_auditor_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tastebychance.sfj.apply.mywaitdealwith.ChangeAuditorActivity">


    <include
        android:id="@+id/head_rl"
        layout="@layout/head_includestatusbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/activity_apply_item_ll_style">

                <TextView
                    style="@style/activity_apply_item_key_style"
                    android:text="类型" />

                <TextView
                    android:id="@+id/activity_apply_item_changetype_tv"
                    style="@style/activity_apply_item_value_style" />

            </LinearLayout>

            <LinearLayout style="@style/activity_apply_item_ll_style">

                <TextView
                    style="@style/activity_apply_item_key_style"
                    android:text="部门/领导" />

                <TextView
                    android:id="@+id/activity_apply_item_leadertype_tv"
                    style="@style/activity_apply_item_value_style" />

            </LinearLayout>

            <LinearLayout style="@style/activity_apply_item_ll_style">

                <TextView
                    style="@style/activity_apply_item_key_style"
                    android:text="职务" />

                <TextView
                    android:id="@+id/activity_apply_item_job_tv"
                    style="@style/activity_apply_item_value_style" />

            </LinearLayout>

            <LinearLayout style="@style/activity_apply_item_ll_style">

                <TextView
                    style="@style/activity_apply_item_key_style"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/activity_apply_item_name_tv"
                    style="@style/activity_apply_item_value_style" />

            </LinearLayout>

            <LinearLayout style="@style/activity_apply_item_ll_style">

                <TextView
                    style="@style/activity_apply_item_key_style"
                    android:text="权限" />

                <TextView
                    android:id="@+id/activity_apply_item_jurisdiction_tv"
                    style="@style/activity_apply_item_value_style" />

            </LinearLayout>

            <LinearLayout style="@style/activity_apply_item_ll_style">

                <TextView
                    style="@style/activity_apply_item_key_style"
                    android:text="变更原因" />

                <TextView
                    android:id="@+id/activity_apply_item_changereason_tv"
                    style="@style/activity_apply_item_value_style" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/activity_apply_item_otherreason_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:visibility="gone"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="其他变更原因"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/activity_apply_item_otherreason_edt"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:paddingBottom="@dimen/dp_13"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/rectangle_grayedge_style"
                    android:hint="请输入原因" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/activity_login_remember_cb"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:checked="true" />

                <TextView
                    android:id="@+id/activity_login_remember_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/activity_login_rememberaccount_cb"
                    android:text="记住该选择"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
