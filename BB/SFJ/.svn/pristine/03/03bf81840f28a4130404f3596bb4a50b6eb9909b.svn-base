<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/mine_topblank_iv"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentTop="true" />
    <RelativeLayout
        android:id="@+id/includestatusbar_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="left"
        android:layout_below="@+id/mine_topblank_iv"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/head_left_iv"
            style="@style/head_left_style" />

        <TextView
            android:id="@+id/head_center_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/head_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:src="@drawable/home_search"
                android:visibility="gone" />

            <TextView
                android:id="@+id/head_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mine_topblank_iv"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:text="完成"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/head_bottomline"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_below="@+id/includestatusbar_rl"
        android:background="@color/line_gray"
        android:visibility="gone" />

</RelativeLayout>