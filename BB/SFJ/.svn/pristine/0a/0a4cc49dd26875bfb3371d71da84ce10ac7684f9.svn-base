<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="260dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_examine_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="审核通过"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/dialog_examine_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="请确认信息准确无误"
        android:textSize="@dimen/sp_12" />

    <EditText
        android:id="@+id/dialog_examine_reason_edt"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/rectangle_grayedge_style"
        android:gravity="center|left"
        android:hint="输入原因..."
        android:padding="@dimen/dp_4"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_sign_tv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_grayedge_style"
            android:gravity="center"
            android:text="签字" />

        <TextView
            android:id="@+id/dialog_seal_tv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle_grayedge_style"
            android:gravity="center"
            android:text="盖章" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/lightgray"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_0.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_examine_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_17" />

        <include layout="@layout/line_vertical" />

        <TextView
            android:id="@+id/dialog_examine_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>
</LinearLayout>
