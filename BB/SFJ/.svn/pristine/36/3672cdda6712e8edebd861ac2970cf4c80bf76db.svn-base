<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personalcenter_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tastebychance.sfj.mine.personalcenter.PersonalCenterActivity">

    <include layout="@layout/head_includestatusbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/activity_personalcenter_item_ll_style">

                <TextView
                    style="@style/activity_personalcenter_item_name_style"
                    android:text="姓名" />

                <View style="@style/activity_personalcenter_item_veriticalline_style" />

                <TextView
                    android:id="@+id/activity_personalcenter_name_tv"
                    style="@style/activity_personalcenter_item_contentedt_style"
                    android:hint=""/>
            </LinearLayout>

            <LinearLayout style="@style/activity_personalcenter_item_ll_style">

                <TextView
                    style="@style/activity_personalcenter_item_name_style"
                    android:text="账户" />

                <View style="@style/activity_personalcenter_item_veriticalline_style" />

                <TextView
                    android:id="@+id/activity_personalcenter_account_tv"
                    style="@style/activity_personalcenter_item_contentedt_style"
                    android:hint=""/>
            </LinearLayout>

            <LinearLayout style="@style/activity_personalcenter_item_ll_style">

                <TextView
                    style="@style/activity_personalcenter_item_name_style"
                    android:text="性别" />

                <View style="@style/activity_personalcenter_item_veriticalline_style" />

                <TextView
                    android:id="@+id/activity_personalcenter_sex_tv"
                    style="@style/activity_personalcenter_item_contentedt_style"
                    android:hint="请选择" />
            </LinearLayout>

            <LinearLayout style="@style/activity_personalcenter_item_ll_style">

                <TextView
                    style="@style/activity_personalcenter_item_name_style"
                    android:text="出生日期" />

                <View style="@style/activity_personalcenter_item_veriticalline_style" />

                <TextView
                    android:id="@+id/activity_personalcenter_birthdate_tv"
                    style="@style/activity_personalcenter_item_contentedt_style"
                    android:hint="请选择" />
            </LinearLayout>

            <LinearLayout style="@style/activity_personalcenter_item_ll_style">

                <TextView
                    style="@style/activity_personalcenter_item_name_style"
                    android:text="政治面貌" />

                <View style="@style/activity_personalcenter_item_veriticalline_style" />

                <TextView
                    android:id="@+id/activity_personalcenter_politicalclimate_tv"
                    style="@style/activity_personalcenter_item_contentedt_style"
                    android:hint="请选择" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
