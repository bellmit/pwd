<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="260dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="驳回申请"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/dialog_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="驳回申请需要说明原因"
        android:textSize="@dimen/sp_12" />

    <EditText
        android:id="@+id/dialog_reason_edt"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_margin="24dp"
        android:background="@drawable/rectangle_grayedge_style"
        android:gravity="left"
        android:hint="输入原因..."
        android:padding="@dimen/dp_4"
        android:textSize="@dimen/sp_15" />

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_17" />

        <include layout="@layout/line_vertical" />

        <TextView
            android:id="@+id/dialog_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>
</LinearLayout>
