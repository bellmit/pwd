<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
>


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单状态：" />

    <TextView
        android:id="@+id/home_my_order_item_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:text="等待送达" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_my_order_item_dishname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="秘制香煎龙利鱼套餐+饮料+紫薯+青菜" />

        <TextView
            android:id="@+id/home_my_order_item_dishnum_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="等3份商品" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_my_order_item_subtotal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:text="实付:256.00元" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_below="@+id/home_my_order_item_subtotal_tv"
        android:background="@color/line_gray" />

    <LinearLayout
        android:id="@+id/home_my_order_item_buttons_ll"
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:layout_below="@+id/view1"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>