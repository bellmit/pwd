<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/person_balancedetail_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="充值成功"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/person_balancedetail_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_marginRight="18dp"
        android:layout_marginTop="12dp"
        android:text="500.00元"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/person_balancedetail_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_balancedetail_status_tv"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:text="2017-07-21"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/person_balancedetail_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/person_balancedetail_value_tv"
        android:layout_marginRight="18dp"
        android:layout_marginTop="11dp"
        android:text="账户余额支付"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/person_balancedetail_time_tv"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:layout_marginTop="12dp"
        android:background="@color/line_gray" />
</RelativeLayout>
