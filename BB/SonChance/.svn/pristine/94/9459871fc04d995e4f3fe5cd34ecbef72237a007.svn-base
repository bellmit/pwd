<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_order_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/home_pay_detail_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="菜品名称 x2"
        android:background="@android:color/transparent"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/home_pay_detail_give_ll"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_pay_detail_give_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/order_form_sendicon" />

        <TextView
            android:id="@+id/home_pay_detail_givedishname_tv"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="赠送菜品名称 x2"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>
</LinearLayout>
