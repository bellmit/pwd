<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_order_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <!--<include layout="@layout/head" />-->
    <include layout="@layout/head_includestatusbar"
        android:id="@+id/view1"/>

    <ScrollView
        android:layout_below="@+id/view1"
        style="@style/layout_mm_style"
        android:scrollbars="none">

        <LinearLayout
            style="@style/layout_mm_style"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="请输入个人资料"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="@color/text_black" />

                <include layout="@layout/line_lr_margin18" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="68dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/person_bank_name_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/choosereceivetime_fastest_tv"
                    android:layout_toRightOf="@+id/textView3"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:hint="请输入您的真实姓名"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/gray"
                    android:textSize="13sp" />

            </RelativeLayout>

            <include layout="@layout/line_lr_margin18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="68dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="身份证号"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/person_bank_idcard_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView4"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:hint="请输入您的身份证号码"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/gray"
                    android:textSize="13sp" />

            </RelativeLayout>

            <include layout="@layout/line_lr_margin18" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="请输入卡号"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="@color/text_black" />

                <include layout="@layout/line_lr_margin18" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="68dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="银行卡号"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/person_bank_cardno_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/choosereceivetime_fastest_tv"
                    android:layout_toRightOf="@+id/textView5"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:hint="请输入您的银行卡号"
                    android:inputType="number"
                    android:maxLength="19"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/gray"
                    android:textSize="13sp" />

            </RelativeLayout>

            <include layout="@layout/line_lr_margin18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="68dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="开户行"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/person_bank_bankname_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_below="@+id/choosereceivetime_fastest_tv"
                    android:layout_toRightOf="@+id/textView6"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_black"
                    android:textSize="13sp" />

            </RelativeLayout>

            <include layout="@layout/line_lr_margin18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                >


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="68dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/person_bank_phone_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/choosereceivetime_fastest_tv"
                    android:layout_toRightOf="@+id/textView10"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:textColor="@color/text_black"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:hint="请输入您在银行预留的手机号"
                    android:textColorHint="@color/gray"
                    android:textSize="13sp" />

            </RelativeLayout>

            <include layout="@layout/line_lr_margin18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="手机验证码"
                    android:textColor="@color/gray"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/person_bank_verifycode_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/textView9"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="16dp"
                    android:textSize="13sp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/text_black"
                    android:hint="请输入6位验证码" />

                <TextView
                    android:id="@+id/person_bank_verifycode_tv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@drawable/rectangle_grayedge_style"
                    android:text="发送验证码" />
            </RelativeLayout>

            <include layout="@layout/line_lr_margin18" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle25_greenbg_style"
                android:gravity="center"
                android:onClick="applyClick"
                android:text="立即申请"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>