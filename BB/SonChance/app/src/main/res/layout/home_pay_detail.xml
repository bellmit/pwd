<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_order_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="订单详情"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/home_pay_detail_userinfo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:text="张新（女士） 186****7890"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/home_pay_detail_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_pay_detail_userinfo_tv"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="福州市软件园D区1号楼华为楼505"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_pay_detail_address_tv"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:text="菜品详单"
        android:textColor="@color/white" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/white" />

    <com.tastebychance.sonchance.view.MyListView
        android:id="@+id/afterpay_dishes_mlv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="16dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/view1"
        android:layout_above="@+id/textView3"
        android:divider="@null">

    </com.tastebychance.sonchance.view.MyListView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="89dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle25_whiteedge_style"
        android:gravity="center"
        android:onClick="confirmClick"
        android:text="确定"
        android:textColor="@color/white" />

</RelativeLayout>
