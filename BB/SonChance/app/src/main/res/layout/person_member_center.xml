<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:id="@+id/refresh_view"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/text_red">


                <FrameLayout
                    android:id="@+id/framelayout1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp">

                    <com.tastebychance.sonchance.view.RoundImageView
                        android:id="@+id/person_item_headportrait_iv"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:background="@drawable/person_defaultheadportrait" />

                    <TextView
                        android:id="@+id/person_item_grade_tv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom|right"
                        android:background="@drawable/circle_whitebg_orangepadding_style"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="V0"
                        android:textColor="@color/vip_color"
                        android:textSize="7sp" />

                </FrameLayout>


                <TextView
                    android:id="@+id/person_membercenter_username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/framelayout1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="遗忘之结晶"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_membercenter_username_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:text="积分 1280"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

                <com.tastebychance.sonchance.view.NodeProgressBar
                    android:id="@+id/person_membercenter_nodeprogressbar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >

                </com.tastebychance.sonchance.view.NodeProgressBar>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/person_membercenter_birthright" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="生日特权"
                        android:textColor="@color/text_black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="满300分可享"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/person_membercenter_discount" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="特价优惠"
                        android:textColor="@color/text_black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="满400分可享"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/person_membercenter_fullcut" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="每日满减"
                        android:textColor="@color/text_black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="满500分可享"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/person_membercenter_shoppingreward" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="购物奖励"
                        android:textColor="@color/text_black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="满800分可享"
                        android:textColor="@color/gray" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout style="@style/person_item_rl">

                <TextView
                    style="@style/layout_ww_style"
                    android:layout_centerVertical="true"
                    android:text="积分收支明细"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:gravity="center"
                    android:onClick="getMoreClick"
                    android:text="更多" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/person_turnright"
                    android:onClick="getMoreClick" />

            </RelativeLayout>

            <include layout="@layout/person_item_line" />

            <com.tastebychance.sonchance.view.MyListView
                android:id="@+id/person_membercneter_mlv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:divider="@null" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>