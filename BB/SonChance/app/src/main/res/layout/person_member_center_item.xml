<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/person_item_mycoupon_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="18dp"
    android:paddingTop="10dp"
    android:paddingRight="18dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_membercenter_jifenname_tv"
            style="@style/layout_ww_style"
            android:text="订单 3982304 赠送积分132"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/person_membercenter_jifentime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_membercenter_jifenname_tv"
            android:text="2017-08-15" />
    </LinearLayout>

    <TextView
        android:id="@+id/person_membercenter_jifenvalue_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+132"
        android:textColor="@color/text_red"
        android:textSize="27sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/person_membercenter_jifenvalue_tv"
        android:background="@color/lightgray" />

</RelativeLayout>
