<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dip"
    android:orientation="vertical" >

    <!-- 通过名单 团秘 -->

    <RelativeLayout
        android:id="@+id/signlist_item_rl"
        style="@style/layout_mW_44H_style" >

        <com.newland.wstdd.common.widget.RoundImageView
            android:id="@+id/headimg_iv"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_marginLeft="10dip"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:src="@drawable/defaultheadimg" />

        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/headimg_iv"
            android:text="TextView"
            android:textColor="@color/textgray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/truename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/headimg_iv"
            android:layout_alignLeft="@+id/nickname_tv"
            android:layout_marginBottom="5dip"
            android:text="TextView"
            android:textColor="@color/lightgray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/phone_iv"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/test_phone" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/phone_iv"
            android:text="+1"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/canceltm_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentRight="true"
            android:background="@color/orange"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="取消团秘"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/tuanda_iv"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/nickname_tv"
            android:src="@drawable/test_applylist_td" />
    </RelativeLayout>

</RelativeLayout>