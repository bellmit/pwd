<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:peng="http://schemas.android.com/apk/res/com.newland.wstdd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll"
        style="@style/layout_mw_style"
        android:orientation="horizontal"
        >

        <FrameLayout
            style="@style/layout_mm_style"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/find_hot_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/test_item04" />

            <TextView
                android:id="@+id/find_hot_logoname_tv"
                style="@style/layout_ww_style"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/textview_radius_shap"
                android:padding="2dip"
                
                android:text="讲座" />
        </FrameLayout>

        <LinearLayout
            style="@style/layout_mm_style"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/find_hot_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:text="融资中国2015互联网金融峰会"
                android:textSize="12sp"
                
                
                
                />

            <TextView
                android:id="@+id/find_hot_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:text="周五   09/27 08:30"
                android:textSize="9sp"
                
                android:drawableLeft="@drawable/time"
                android:drawablePadding="5dip"
                 />

            <TextView
                android:id="@+id/find_hot_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                 
                android:text="广东省深圳市"
                android:textSize="9sp"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="5dip"
                 />

            <RelativeLayout
                style="@style/layout_mw_style"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/find_hot_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                     
                    android:text="336名"
                    android:textSize="9sp"
                    android:drawableLeft="@drawable/persons"
                    android:drawablePadding="5dip"
                     />

                <LinearLayout
                    style="@style/layout_ww_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <ImageView
                        android:id="@+id/find_hot_ischarge"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        android:text="收费" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>