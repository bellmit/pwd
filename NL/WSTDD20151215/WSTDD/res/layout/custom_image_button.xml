<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_image_button_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical">
  <LinearLayout 
        style="@style/layout_mw_style"
           android:background="@color/bg_gray"
        android:orientation="vertical">
        
       
    <RelativeLayout
        android:id="@+id/registration_edit_listview_item_toprl1"
        android:background="@color/text_red"
        style="@style/layout_mw_style"
        android:paddingTop="10dip"
         android:paddingBottom="10dip"
        android:orientation="horizontal">   
    <TextView
        android:id="@+id/registration_edit_sxtop_name"
        style="@style/layout_ww_style" 
        android:layout_marginLeft="20dip"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:text="林多多"/>   
     <TextView
        android:id="@+id/registration_edit_sxtop_phone"
        style="@style/layout_ww_style" 
        android:layout_marginLeft="20dip"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:inputType="phone"
        android:layout_toRightOf="@id/registration_edit_sxtop_name"
        android:text="18750736798"/>    

     <TextView
         android:id="@+id/registration_edit_sxtop_delete"
         style="@style/layout_ww_style"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="20dip"
         android:background="@drawable/text_rectangle_whiteboder_style"
         android:text="删除"
         
         android:textColor="@color/white" />
 
   </RelativeLayout>
    <RelativeLayout
        android:id="@+id/registration_edit_listview_item_toprl2"
        style="@style/layout_mw_style"
           android:background="@color/white"
        android:orientation="horizontal">   
    <TextView
        style="@style/layout_ww_style" 
        android:layout_marginLeft="20dip"
        android:paddingTop="17dip"
        android:paddingBottom="10dip"
        android:layout_alignParentLeft="true"
        android:text="编辑信息"/>    
     <TextView
        android:id="@+id/registration_edit_sxtop_edit"
        style="@style/layout_ww_style" 
        android:paddingTop="17dip"
        android:layout_marginRight="20dip"
        android:paddingBottom="10dip"
        android:layout_alignParentRight="true"
        android:text="完成"/> 
   </RelativeLayout>
   
   <LinearLayout
        android:id="@+id/registration_edit_listview_item_childll1"
        style="@style/layout_mW_44H_style"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dip" >

        <TextView
            android:id="@+id/registration_item_child_textview"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="姓名" />

        <EditText
            android:id="@+id/registration_item_child_editext"
            style="@style/layout_mW_44H_style"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="rrrr"
            android:background="@null"
            android:layout_marginRight="20dip"
            android:textSize="10sp" />
    </LinearLayout>
    
 </LinearLayout>
</RelativeLayout>
